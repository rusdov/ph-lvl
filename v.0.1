void msensor(){
moisVolt = analogRead(moisPin);
Serial.print ("msensor voltage =");
Serial.print (moisVolt);

moisture = constrain(moisVolt,460,849);
moisture = map(moisVolt, 849, 460, 0, 100);
Serial.print ("moisture =");
Serial.print (moisture);
Blynk.virtualWrite(V8, moisture);
}

void pmpProc(){
   
   if (moisture < moisSet){
   digitalWrite(pmpPin, LOW);
   pmpOn = true;
   pmpOnTime = millis(); 
   led1.on();
   delay(pmpTimer);
}

if(pmpOn)
if(millis() - pmpOnTime > pmpTimer){
  digitalWrite(pmpPin, HIGH); 
  led1.off();
  pmpOn = false;      
 }
}

void setup() {

Serial.begin(9600);  
myHumidity.begin();
Blynk.begin(auth, ssid, pass);
delay(200);

//timers
timer.setInterval(10000, msensor);
timer.setInterval(10000, gy21);
timer.setInterval(10000,pmpProc);
//pimode
pinMode(moisPin,INPUT);
pinMode(pmpPin,OUTPUT);
digitalWrite(pmpPin,HIGH);
pmpOn = false;

}
BLYNK_CONNECTED(){
  Blynk.syncAll();
}

void loop() {
  
Blynk.run(); 
timer.run();  
}
